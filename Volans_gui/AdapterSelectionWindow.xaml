<Window x:Class="Volans_gui.AdapterSelectionWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Volans_gui"
        mc:Ignorable="d"
        Title="Adapter Selection Window" Height="300" Width="400" Background="White">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="0*"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <ListBox Name="adapterListBox" Margin="10,10,10,38" Grid.Column="1"/>
        <Button Content="Выбрать" HorizontalAlignment="Center" Width="75" Margin="0,0,0,10" Click="SelectButton_Click" Grid.Column="1" Height="23" VerticalAlignment="Bottom"/>
    </Grid>
</Window>
